<%- include ('../../partials/head.ejs') %>
<%- include ('../../partials/navbar.ejs') %>
<section class="container mt-5">
    <h4>Novo artigo</h4>
    <form method="POST" action="/articles/save">
            <input class="form-control mb-3" type="text" name="titulo" placeholder="TÃ­tulo do artigo">
            <textarea class="form-control" placeholder="Escreva o artigo aqui" name="body" id="article" cols="30" rows="10"></textarea>
            <input class="form-control" type="text" name="author" placeholder="Autor do artigo">
            <label class="mt-3" for="category"><strong>Selecione uma categoria:</strong></label>
            <select class="form-control" name="category" id="">
                <% categories.forEach((category) => { %>
                    <option value="<%= category.id %>"><%= category.title %></option>
                <% }) %>
            </select>
            <button class="btn text-light mt-3" style="background-color: #009688;">Publicar</button>
    </form>
</section>
<%- include ('../../partials/footer.ejs') %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
   tinymce.init({
      selector: "#article",
      plugins: [
          'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste'
      ] 
   }) 
</script>