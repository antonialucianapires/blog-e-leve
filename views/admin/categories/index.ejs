<%- include ('../../partials/head.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<section class="container mt-5">
    <div class="d-flex justify-content-between mb-4">
        <h4>Todas as categorias</h4>
        <a class="btn text-light" style="background-color: #009688;" href="/admin/categories/new">Nova categoria</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
                <tr>
                    <th><%= category.id %></th>
                    <th><%= category.title %></th>
                    <th><%= category.slug %></th>
                    <th>
                        <button class="btn btn-info">Editar</button>
                        <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmaDelete(event, this)">
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button class="btn btn-danger">Excluir</button>
                        </form>
                    </th>
                </tr>
            <% }) %>
        </tbody>
    </table>
</section>
<%- include ('../../partials/footer.ejs') %>
<script>
    function confirmaDelete(event, form) {
        event.preventDefault();
        var decision = confirm("Você quer deletar essa categoria?");
        if(decision) {
            form.submit();
        } 
    }
</script>